<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"   
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:MVVMFirma.Views">


    <Style TargetType="{x:Type local:WszystkieViewBase}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:WszystkieViewBase}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="55"/>
                                <ColumnDefinition Width="55"/>
                            </Grid.ColumnDefinitions>
                        <ComboBox Grid.Row="0" Grid.Column="0" Background="Honeydew">
                            <ToggleButton Content="Dodaj" Margin="0,2,0,2"/>
                            <ToggleButton Content="Edytuj" Margin="0,2,0,2" />
                            <ToggleButton Content="Usun" Margin="0,2,0,2" />
                            <ToggleButton Content="Odswiez" Margin="0,2,0,2" />
                        </ComboBox>
                        <ComboBox Grid.Row="1" Grid.Column="1" Background="AliceBlue">
                            <Button Content="Sortuj" Margin="0,2,0,2" />
                            <Button Content="Filtruj" Margin="0,2,0,2"/>
                            
                        </ComboBox>
                        </Grid>
                        <ContentPresenter Grid.Row="2"/>                        
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:JedenViewBase}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:JedenViewBase}">
                    <Grid Margin="0,10,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="*"/>

                        </Grid.RowDefinitions>
                        <ToolBar Grid.Row="0" Height="30" Margin="0,2,0,2">
                            <Button Content="Zapisz i zamknij" Margin="0,2,0,2" Width="100" Height="36"/>
                            <Button Content="Anuluj" Margin="0,2,0,2" Width="100" Height="36"/>
                        </ToolBar>
                        <ContentPresenter Grid.Row="1" Margin="0,5,0,5"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
